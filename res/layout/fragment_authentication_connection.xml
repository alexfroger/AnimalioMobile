<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="#0099ff"
            android:paddingBottom="5dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white_color" >

                <TextView
                    android:id="@+id/txv_connexion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/normal_padding"
                    android:text="CONNEXION"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="@dimen/large_padding"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_connexion"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:text="Votre email" />

                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="@dimen/large_padding"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_email"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:text="Votre mot de passe" />

                <Button
                    android:id="@+id/txv_seConnecter"
                    style="@style/button_auth"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/user_password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="3dp"
                    android:text="Se connecter" />

                <Button
                    android:id="@+id/btn_fb_connect"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_seConnecter"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_fb_connect" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_closed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_closed" />
    </RelativeLayout>

</LinearLayout>