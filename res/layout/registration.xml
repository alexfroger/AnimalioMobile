<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_authentication_xml"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/txv_connexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingTop="@dimen/normal_padding"
            android:text="S&apos;inscrire"
            android:textColor="@color/title_authDial"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/registration_lastname"
            android:layout_width="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_connexion"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:gravity="center_vertical|left"
            android:hint="@string/hint_registration_lastname"
            android:inputType="textEmailAddress"
            android:textColor="@color/textTextField_authDial"
            android:textColorHint="@color/hintTextField_authDial" />

        <EditText
            android:id="@+id/registration_firstname"
            android:layout_width="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/registration_nickname"
            android:layout_width="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/registration_email"
            android:layout_width="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/registration_password"
            android:layout_width="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/registration_check_password"
            android:layout_width="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_registration"
                style="@style/button_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:text="@string/register" />

            <Button
                android:id="@+id/btn_registration_cancel"
                style="@style/button_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:text="@string/cancel" />
        </LinearLayout>
</LinearLayout>